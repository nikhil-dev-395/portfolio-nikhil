<section id="about" class="w-full h-auto mt-24 md:mt-1 lg:mt-1 pb-12">
  <h2 class="text-2xl md:text-3xl py-8 font-bold text-center" id="aboutHeader">
    A glimpse into my journey and passion for web development.
  </h2>
  <div class="w-full h-auto space-y-10" id="box-container">
    <!-- First Box -->
    <div
      id="box1"
      class="w-full max-w-[1150px] h-auto mx-auto grid grid-cols-1 md:grid-cols-2 gap-4 p-4"
    >
      <!-- Left Section -->
      <div
        id="lft-img"
        class="flex items-end justify-start rounded-3xl h-full bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 p-6"
      >
        <p
          class="text-lg md:text-2xl font-bold text-left mb-7 ml-3 max-w-full md:max-w-[80%] text-white"
        >
          My primary goal is to make dynamic websites using the MERN stack
        </p>
      </div>

      <!-- Right Section -->
      <div id="rightinfo" class="flex flex-col justify-center space-y-4">
        <!-- Right Top Content -->
        <div
          id="rightop1"
          class="mb-4 rounded-3xl bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 p-6"
        >
          <p
            class="text-lg md:text-2xl font-bold text-left mb-3 ml-3 max-w-full md:max-w-[80%] text-white"
          >
            I'm very flexible with time zone communications
          </p>
        </div>

        <!-- Right Bottom Content -->
        <div
          id="rightop2"
          class="p-6 rounded-3xl border flex flex-col md:flex-row items-center md:space-x-6 space-y-4 md:space-y-0"
          style="background-color: #000319"
        >
          <div class="details text-center md:text-left mb-4 md:mb-0">
            <p class="text-sm md:text-xs text-slate-200">
              I constantly try to improve
            </p>
            <h3 class="text-xl md:text-sm font-extrabold text-white">
              my tech stack
            </h3>
          </div>

          <div
            id="tech-stack"
            class="flex flex-wrap gap-2 text-center mt-4 md:mt-0 w-full"
          >
            <% myTechStack.forEach(tech => { %>
            <li
              class="text-xs md:text-sm border px-3 py-2 inline-block rounded-md"
            >
              <div class="flex items-center gap-2">
                <img
                  src="<%= tech.techIcon %>"
                  alt="<%= tech.techIcon %>"
                  class="w-4 h-4"
                />
                <span><%= tech.techName %></span>
              </div>
            </li>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Second Box with Incremented IDs -->
    <div
      id="box2"
      class="w-full max-w-[1150px] h-auto mx-auto grid grid-cols-1 md:grid-cols-2 gap-4 p-4"
      style="margin-top: 40px"
    >
      <!-- Right Section -->
      <div id="rightinfo2" class="flex flex-col justify-center space-y-4">
        <!-- Right Top Content -->
        <div
          id="rightop12"
          class="mb-4 rounded-3xl border p-6 bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900"
        >
          <p
            class="text-lg md:text-2xl font-bold text-left mb-3 ml-3 max-w-full md:max-w-[80%] text-white"
          >
            Tech enthusiast with a drive for innovation
          </p>
        </div>

        <!-- Right Bottom Content -->
        <div
          id="rightop22"
          class="p-6 rounded-3xl border border-slate-600 flex flex-col md:flex-row items-center space-x-0 md:space-x-6 space-y-4 md:space-y-0"
        >
          <div class="leading-9 text-center md:text-left">
            <p class="text-slate-200 text-bold text-xl md:text-2xl mb-6">
              Would you like to collaborate on a project?
            </p>

            <div
              id="copy-email"
              data-email="<%= myEmail %>"
              class="inline-block gap-3 border border-purple-500 py-2 px-5 rounded-md cursor-pointer hover:rounded-2xl hover:text-blue-700"
            >
              <div class="flex px-3 py-2 items-center">
                <img src="/icons/copy.svg" alt="copy icon" class="w-4 h-4" />
                <span>Copy Email</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Left Section -->
      <div
        id="lft-img2"
        class="flex items-end justify-start rounded-3xl h-full bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 p-6"
      >
        <p
          class="text-lg md:text-2xl font-bold text-left mb-7 ml-3 max-w-full md:max-w-[80%] text-white"
        >
          <%= whatAreDoingNowDays %>
        </p>
      </div>
    </div>
  </div>
</section>
